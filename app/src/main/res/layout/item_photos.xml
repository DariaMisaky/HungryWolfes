<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/meal_image"
        android:layout_width="122dp"
        android:layout_height="154dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@id/meal_description"
        app:layout_constraintLeft_toLeftOf="@id/card_view"
        app:layout_constraintRight_toRightOf="@id/card_view"

        tools:src="@tools:sample/backgrounds/scenic" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        card_view:cardUseCompatPadding="true"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_extra_extra_large"
        android:outlineSpotShadowColor="@color/black"
        app:cardCornerRadius="35dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="@id/meal_description"
        app:layout_constraintEnd_toEndOf="@id/relative_layout"
        app:layout_constraintHeight_percent="0.78"
        app:layout_constraintStart_toStartOf="@id/relative_layout"
        app:layout_constraintTop_toTopOf="@id/meal_image"
        app:layout_constraintVertical_bias="1">


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/meal_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="10dp"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/meal_image"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintStart_toStartOf="@+id/meal_image"
        app:layout_constraintTop_toBottomOf="@+id/meal_image"
        app:layout_constraintWidth_percent="0.7"
        tools:text="Description fdaljfn sadfodjsafijosdafosapifjsafodipjsa" />

</androidx.constraintlayout.widget.ConstraintLayout>
